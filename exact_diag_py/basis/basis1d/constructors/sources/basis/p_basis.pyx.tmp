





def make_m_p_basis(int L, int Nup, int pblock, _np.ndarray[NP_INT8_t,ndim=1] N, _np.ndarray[{np_basis_type}_t ,ndim=1]  basis):
	cdef {c_basis_type} s,Ns
	cdef NP_INT8_t rp
	cdef char stp

	cdef int j

	s = 0
	for j in range(Nup):
		s += ( 1ull << j )

	if (Nup == L) or (Nup == 0):
		basis[0] = s
		return 1


	stp = 0
	Ns = 0
	while True:
		rp = CheckState_P(pblock,s,L)
		if rp > 0:
			basis[Ns] = s
			N[Ns] = rp
			Ns += 1

		stp = 1 & ( s >> (L-1) )
		for i in range(1,Nup):
			stp &= 1 & ( s >> (L-i-1) )

		if stp:
			break

		s = next_state(s)

	return Ns








def make_p_basis(int L, int pblock,	_np.ndarray[NP_INT8_t,ndim=1] N, _np.ndarray[{np_basis_type}_t ,ndim=1]  basis):

	cdef {c_basis_type} s,Ns
	cdef int rp

	Ns = 0
	cdef {c_basis_type} Nsmax
	Nsmax = 2ull**L

	for s in range(Nsmax):
		rp = CheckState_P(pblock,s,L)
		if rp > 0:
			basis[Ns] = s
			N[Ns] = rp
			Ns += 1

	return Ns

