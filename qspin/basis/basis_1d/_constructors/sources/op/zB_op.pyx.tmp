
def {type_code}_zB_op(_np.ndarray[{np_basis_type}_t,ndim=1] basis, str opstr, _np.ndarray[NP_INT32_t,ndim=1] indx, {c_complex_type} J, int L, int zBblock):
	cdef {c_basis_type} s
	cdef int error,ss,i,Ns,gB
	cdef _np.ndarray[{np_basis_type}_t,ndim = 1,mode='c'] R = _np.zeros(2,{np_basis_type})
	cdef _np.ndarray[NP_INT32_t,ndim=1] row
	cdef _np.ndarray[{c_matrix_type},ndim=1,mode='c'] ME

	Ns = basis.shape[0]

	row,ME,error = {type_code}_spinop(basis,opstr,indx,J)

	if error != 0:
